<h2>Fat Cats Online</h2>

<table>

<% @posts.each do |post| %>
	<tr>
		<td>
			<div class="voteBox">
				<%= link_to post_votes_path(post, direction: "up"),  method: :post do %>
					<i class="icon-thumbs-up"></i>
				<% end %>

				</br>

				<strong> <%= post.vote_number %> </strong>

				</br>

				<%= link_to post_votes_path(post, direction: "down"), method: :post do %>
					<i class="icon-thumbs-down"></i>
				<% end %>
			</div>

		</td>
		<td>

			<div>
				<%= display_url_link(post) %>
				</br>
				(<%= link_to pluralize(post.comments.count, "comment" ), post_path(post) %>)
			</div>

			</br>

		</td>
	</tr>
<% end %>

</table>

</br>

<% if logged_in? %>
	<a href="posts/new" button class="btn btn-large">Submit a link</a>
<% end %>
